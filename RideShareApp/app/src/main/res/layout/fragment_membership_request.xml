<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_margin"
            android:fillViewport="true"
            tools:context="com.digitusrevolution.rideshare.fragment.MembershipRequestFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/membership_form_question_answer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <EditText
            android:id="@+id/user_remark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_block_height"
            android:background="@drawable/border"
            android:layout_marginTop="@dimen/small_margin"
            android:textStyle="italic"
            android:gravity="start"
            android:padding="@dimen/default_padding"
            android:hint="User Remark (Optional)"/>

        <EditText
            android:id="@+id/admin_remark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_block_height"
            android:background="@drawable/border"
            android:layout_marginTop="@dimen/small_margin"
            android:textStyle="italic"
            android:gravity="start"
            android:padding="@dimen/default_padding"
            android:hint="Admin Remark (Mandatory for Rejection)"/>


        <Button
            android:id="@+id/submit_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Submit"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/large_margin"/>

        <LinearLayout android:id="@+id/admin_buttons_layout"
                      xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="@dimen/large_margin">

            <Button
                android:id="@+id/approve_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Approve"
                android:textAllCaps="true"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/reject_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Reject"
                android:textAllCaps="true"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
