<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/small_padding">

    <TextView android:id="@+id/title_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Drop CoTraveller"
              android:textSize="@dimen/heading3_text_size"
              android:textColor="@android:color/black"/>

    <LinearLayout
        android:id="@+id/ride_mode_payment_code_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_height="@dimen/line_seperator_thickness"
            android:background="@color/colorGrayLight"/>

        <include layout="@layout/ride_mode_layout" android:id="@+id/ride_mode_layout"/>

        <EditText android:id="@+id/payment_code_text"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="Payment Code"
                  android:inputType="number"/>

    </LinearLayout>



</LinearLayout>