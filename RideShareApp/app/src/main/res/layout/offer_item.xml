<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

    <ImageView
        android:id="@+id/offer_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_block_height"
        android:layout_marginBottom="@dimen/default_margin"
        android:background="@color/colorGrayLight"/>

    <TextView
        android:id="@+id/offer_partner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parift Ride"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_below="@id/offer_image"
        android:textSize="@dimen/heading3_text_size"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/offer_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free Parking anywhere in Bangalore"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_below="@id/offer_partner_name"
        android:textSize="@dimen/heading3_text_size"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/offer_rides_requirement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/offer_description"
        android:text="5 Rides in a Week (2 More rides to go)"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>