<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.digitusrevolution.rideshare.fragment.RedeemFragment">

    <include layout="@layout/wallet_balance"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/redeem_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:hint="@string/amount_hint"
        android:inputType="number"
        android:textSize="@dimen/heading3_text_size"
        app:backgroundTint="@color/colorPrimary"/>

    <Button
        android:id="@+id/redeem_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:background="@color/colorPrimary"
        android:text="Redeem"/>

</LinearLayout>
