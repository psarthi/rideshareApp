<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fillViewport="true"
              android:orientation="vertical"
              android:layout_margin="@dimen/default_margin"
              tools:context="com.digitusrevolution.rideshare.fragment.AboutGroupFragment">

    <TextView
        android:id="@+id/group_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brief description about the group"
        android:padding="@dimen/default_padding"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"/>

    <LinearLayout
        android:id="@+id/group_member_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_seperator_thickness"
            android:background="@color/colorGrayLight"/>

        <Button
            android:id="@+id/membership_form_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Membership Form"
            android:gravity="start|center"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_seperator_thickness"
            android:background="@color/colorGrayLight"/>

        <Button
            android:id="@+id/leave_group_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave Group"
            android:gravity="start|center"
            android:textColor="@color/colorAccent"
            android:textAllCaps="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_seperator_thickness"
            android:background="@color/colorGrayLight"
            android:layout_marginBottom="@dimen/small_margin"/>

    </LinearLayout>

    <Button
        android:id="@+id/group_join_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join"
        android:background="@color/colorPrimary"
        android:textAllCaps="true"
        android:layout_marginBottom="@dimen/default_margin"/>

    <Button
        android:id="@+id/group_membership_request_status_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rejected"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:background="@color/colorGrayLight"
        android:layout_marginBottom="@dimen/default_margin"/>


</LinearLayout>
