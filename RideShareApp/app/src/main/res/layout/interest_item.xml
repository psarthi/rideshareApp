<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android"
       tools:showIn="@layout/selectable_interest_item"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/interest_item"
       android:layout_margin="@dimen/default_margin">


    <!-- tint would make image bit darker so that text is visible properly
        where 0 is fully tranparent and 1 would make it fully dark-->
    <ImageView
        android:id="@+id/interest_image"
        android:layout_width="@dimen/interest_image_size"
        android:layout_height="@dimen/interest_image_size"
        android:tint="#50000000"
        android:src="@drawable/ic_profile"/>

    <TextView
        android:id="@+id/interest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/interest_image"
        android:layout_alignEnd="@id/interest_image"
        android:layout_alignStart="@id/interest_image"
        android:layout_alignTop="@+id/interest_image"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:gravity="bottom|center"
        android:text="Partha Sarthi"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>


</RelativeLayout>