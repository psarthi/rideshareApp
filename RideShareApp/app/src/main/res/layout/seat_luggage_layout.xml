<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="@dimen/default_padding"
              android:background="?android:colorBackground"
              tools:showIn="@layout/fragment_offer_ride_option">

    <LinearLayout
        android:id="@+id/seat_inner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_of_seats_label"
            android:drawableLeft="@drawable/ic_seat_recline_extra"
            android:drawablePadding="@dimen/default_padding"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end">

            <ImageButton
                android:id="@+id/seat_minus_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_minus_circle"
                android:background="@android:color/transparent"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/seat_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:background="@drawable/border"
                android:padding="@dimen/small_padding"
                android:textAlignment="center"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/seat_plus_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_circle"
                android:background="@android:color/transparent"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/luggage_inner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/small_luggage_label"
            android:drawableLeft="@drawable/ic_small_luggage"
            android:drawablePadding="@dimen/default_padding"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end">

            <ImageButton
                android:id="@+id/luggage_minus_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_minus_circle"
                android:background="@android:color/transparent"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/luggage_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:background="@drawable/border"
                android:padding="@dimen/small_padding"
                android:textAlignment="center"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/luggage_plus_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_circle"
                android:background="@android:color/transparent"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>