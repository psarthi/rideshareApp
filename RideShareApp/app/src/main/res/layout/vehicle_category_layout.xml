<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android"
       tools:showIn="@layout/fragment_add_vehicle">


    <LinearLayout
        android:id="@+id/vehicle_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        android:layout_marginBottom="@dimen/default_margin">

        <TextView
            android:id="@+id/vehicle_category_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/category_label"
            android:textSize="@dimen/standard_label_text_size"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/vehicle_category_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vehicle_sub_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        android:layout_marginBottom="@dimen/default_margin">

        <TextView
            android:id="@+id/vehicle_sub_category_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sub_category_label"
            android:textSize="@dimen/standard_label_text_size"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/vehicle_sub_category_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
</merge>