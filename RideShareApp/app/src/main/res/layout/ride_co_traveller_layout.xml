<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/default_padding"
              android:paddingLeft="@dimen/default_padding"
              android:paddingRight="@dimen/default_padding"
              android:orientation="vertical">

    <include layout="@layout/user_profile_single_row_layout" android:id="@+id/user_profile_layout"/>

    <TextView android:id="@+id/co_traveller_pickup_point_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gopalan Grandeur, Hoodi, Bangalore"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_green_flag"/>

    <TextView android:id="@+id/co_traveller_drop_point_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajmera Infinity, Electronic City, Bangalore"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_red_flag"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start">

        <Button
            android:id="@+id/co_traveller_reject_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin"
            android:text="Reject"
            android:textColor="@color/colorAccent"/>

        <Button
            android:id="@+id/co_traveller_pickup_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup"
            android:textColor="@color/colorAccent"
            android:layout_marginEnd="@dimen/default_margin"/>

        <Button
            android:id="@+id/co_traveller_drop_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drop"
            android:textColor="@color/colorAccent"
            android:layout_marginEnd="@dimen/default_margin"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_seperator_thickness"
        android:background="@color/light_gray"/>

</LinearLayout>