<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/company_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/heading1_top_margin"
        android:text="@string/company_name"
        android:textSize="@dimen/heading1_text_size"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/product_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/company_name_text_view"
        android:layout_centerHorizontal="true"
        android:text="@string/product_name"
        android:textSize="@dimen/heading2_text_size"
        android:textStyle="italic"
        android:textColor="@android:color/white"/>


</RelativeLayout>