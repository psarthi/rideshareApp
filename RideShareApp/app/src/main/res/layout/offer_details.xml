<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android"
       tools:showIn="@layout/fragment_offer_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:id="@+id/termsAndCondition_line_seperator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_seperator_thickness"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:background="@color/colorGrayLight"/>

    <TextView
        android:id="@+id/offer_ride_termsAndCondition_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:text="Terms and Condition"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/offer_ride_termsAndCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms and Condition Description"/>

    <View
        android:id="@+id/redemptionProcess_line_seperator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_seperator_thickness"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:background="@color/colorGrayLight"/>

    <TextView
        android:id="@+id/offer_ride_redemptionProcess_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:text="How to Redeem"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/offer_ride_redemptionProcess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redemption Process"
        android:layout_marginBottom="60dp"/>


</LinearLayout>