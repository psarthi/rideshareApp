<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.digitusrevolution.rideshare.fragment.RideInfoFragment"
              android:orientation="vertical"
              android:weightSum="5">

    <RelativeLayout android:id="@+id/ride_info_basic_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:minHeight="@dimen/small_block_height"
                    android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic Info"/>

    </RelativeLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:map="http://schemas.android.com/apk/res-auto"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              android:id="@+id/ride_info_map"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              map:cameraZoom="5"
              map:mapType="normal"
              map:liteMode="true"
              android:layout_weight="1"/>


    <ListView android:id="@+id/ride_info_co_traveller_list"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="3">
    </ListView>

</LinearLayout>
