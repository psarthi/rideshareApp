<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
              android:orientation="vertical"
            tools:context="com.digitusrevolution.rideshare.fragment.UserProfileFragment">


        <ImageView android:id="@+id/user_profile_large_image"
                   android:layout_width="match_parent"
                   android:layout_height="150dp"
                   android:src="@drawable/ic_profile"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#8C9EFF">

            <ImageView android:id="@+id/add_friend_image"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_add_friend_large"
                       android:layout_marginRight="@dimen/default_margin"/>

            <TextView android:id="@+id/thumbnail_name_text"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:text="Partha Sarthi"
                      android:textStyle="bold"
                      android:gravity="center_vertical"
                      android:textSize="@dimen/heading3_text_size"
                      android:layout_marginEnd="@dimen/default_margin"/>

            <TextView android:id="@+id/user_rating_text"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="4.5"
                      android:textStyle="bold"
                      android:gravity="center_vertical"
                      android:drawableEnd="@drawable/ic_stars"
                      android:textColor="@color/colorPrimaryDark"/>

            <ImageView android:id="@+id/friend_image"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_friend_standard"/>

            <ImageView android:id="@+id/user_mobile_imageView"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_phone"
                       android:background="@android:color/transparent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding"
            android:orientation="horizontal"
            android:background="#E8EAF6">

            <TextView android:id="@+id/rides_offered_text"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Rides Offered - 10"
                      android:drawableStart="@drawable/ic_vehicle"
                      android:drawablePadding="@dimen/default_padding"
                      android:gravity="center_vertical"
                      android:textStyle="bold|italic"/>

            <TextView android:id="@+id/ride_taken_text"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Rides Taken - 10"
                      android:drawableStart="@drawable/ic_seat_recline_extra"
                      android:drawablePadding="@dimen/default_padding"
                      android:gravity="center_vertical"
                      android:textStyle="bold|italic"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/mutual_friends_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="@dimen/default_padding"
                      android:orientation="vertical">

            <TextView android:id="@+id/mutual_friends_count_text"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Mutual Friends - 10 (See All)"
                      android:drawableStart="@drawable/ic_friends"
                      android:drawablePadding="@dimen/default_padding"
                      android:textStyle="bold|italic"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mutual_friends_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/line_seperator_thickness"
                  android:background="@color/light_gray"/>

        </LinearLayout>


        <LinearLayout android:id="@+id/common_groups_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="@dimen/default_padding"
                      android:orientation="vertical">

            <TextView android:id="@+id/common_group_count_text"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Common Groups - 10 (See All)"
                      android:drawableStart="@drawable/ic_group"
                      android:drawablePadding="@dimen/default_padding"
                      android:textStyle="bold|italic"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/common_groups_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
