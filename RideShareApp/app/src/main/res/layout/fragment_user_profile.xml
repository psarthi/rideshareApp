<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.digitusrevolution.rideshare.fragment.UserProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/default_padding">


        <ImageView android:id="@+id/thumbnail_image"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/large_block_height"
                   android:src="@drawable/ic_profile"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/small_margin"
            android:gravity="center">

            <ImageView android:id="@+id/add_friend_image"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_add_friend_large"
                       android:layout_marginRight="@dimen/default_margin"/>

            <TextView android:id="@+id/thumbnail_name_text"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:text="Partha Sarthi"
                      android:textStyle="bold"
                      android:gravity="center_vertical"
                      android:textSize="@dimen/heading3_text_size"
                      android:layout_marginEnd="@dimen/default_margin"
                      android:textColor="@color/colorPrimaryDark"/>

            <TextView android:id="@+id/user_rating_text"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="4.5"
                      android:textStyle="bold"
                      android:gravity="center_vertical"
                      android:drawableEnd="@drawable/ic_stars"
                      android:textColor="@color/colorPrimaryDark"/>

            <ImageView android:id="@+id/friend_image"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_friend_standard"/>

            <ImageView android:id="@+id/user_mobile_imageView"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_phone"
                       android:background="@android:color/transparent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:orientation="horizontal">

            <TextView android:id="@+id/rides_offered_text"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Rides Offered - 10"
                      android:drawableStart="@drawable/ic_vehicle"
                      android:drawablePadding="@dimen/default_padding"
                      android:gravity="center_vertical"
                      android:textStyle="bold|italic"/>

            <TextView android:id="@+id/ride_taken_text"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Rides Taken - 10"
                      android:drawableStart="@drawable/ic_seat_recline_extra"
                      android:drawablePadding="@dimen/default_padding"
                      android:gravity="center_vertical"
                      android:textStyle="bold|italic"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/mutual_friends_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_seperator_thickness"
                android:background="@color/light_gray"/>

            <TextView android:id="@+id/mutual_friends_count_text"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Mutual Friends - 10"
                      android:drawableStart="@drawable/ic_friends"
                      android:drawablePadding="@dimen/default_padding"
                      android:layout_gravity="center"
                      android:gravity="center_vertical"
                      android:textStyle="bold|italic"
                      android:layout_marginTop="@dimen/small_margin"
                      android:layout_marginBottom="@dimen/default_margin"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mutual_friends_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_seperator_thickness"
                android:background="@color/light_gray"/>

            <Button android:id="@+id/see_all_friends_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="?android:borderlessButtonStyle"
                    android:text="See All Friends"
                    android:textColor="@color/colorAccent"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/common_groups_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_seperator_thickness"
                android:background="@color/light_gray"/>

            <TextView android:id="@+id/common_group_count_text"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Common Groups - 10"
                      android:drawableStart="@drawable/ic_group"
                      android:drawablePadding="@dimen/default_padding"
                      android:layout_gravity="center"
                      android:gravity="center_vertical"
                      android:textStyle="bold|italic"
                      android:layout_marginTop="@dimen/default_margin"
                      android:layout_marginBottom="@dimen/default_margin"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/common_groups_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_seperator_thickness"
                android:background="@color/light_gray"/>

            <Button android:id="@+id/see_all_groups_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="?android:borderlessButtonStyle"
                    android:text="See All Groups"
                    android:textColor="@color/colorAccent"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
