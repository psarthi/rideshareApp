<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.digitusrevolution.rideshare.fragment.PreferenceFragment"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/default_margin">

    <LinearLayout android:id="@+id/preference_common_layout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <LinearLayout android:id="@+id/preference_seat_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:padding="@dimen/default_padding">

            <TextView
                android:id="@+id/preference_seat_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_of_seats_label"
                android:textSize="@dimen/standard_label_text_size"/>

            <LinearLayout android:id="@+id/preference_seat_inner_layout"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="end"
                          android:layout_marginEnd="@dimen/default_margin">

                <ImageButton android:id="@+id/preference_seat_minus_image"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:src="@drawable/ic_minus_circle"
                             android:background="@android:color/transparent"
                             android:layout_marginEnd="@dimen/default_margin"/>

                <TextView android:id="@+id/preference_seat_text"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="1"
                          android:textSize="14dp"
                          android:background="@drawable/border"
                          android:padding="@dimen/default_padding"
                          android:textAlignment="center"/>

                <ImageButton android:id="@+id/preference_seat_plus_image"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:src="@drawable/ic_add_circle"
                             android:background="@android:color/transparent"
                             android:layout_marginStart="@dimen/default_margin"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout android:id="@+id/preference_small_luggage_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:padding="@dimen/default_padding">

            <TextView
                android:id="@+id/preference_small_luggage_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/small_suitcase_label"
                android:textSize="@dimen/standard_label_text_size"/>

            <LinearLayout android:id="@+id/preference_small_luggage_inner_layout"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="end"
                          android:layout_marginEnd="@dimen/default_margin">

                <ImageButton android:id="@+id/preference_small_luggage_minus_image"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:src="@drawable/ic_minus_circle"
                             android:background="@android:color/transparent"
                             android:layout_marginEnd="@dimen/default_margin"/>

                <TextView android:id="@+id/preference_small_luggage_text"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="0"
                          android:background="@drawable/border"
                          android:padding="@dimen/default_padding"/>

                <ImageButton android:id="@+id/preference_small_luggage_plus_image"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:src="@drawable/ic_add_circle"
                             android:background="@android:color/transparent"
                             android:layout_marginStart="@dimen/default_margin"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:id="@+id/preference_ride_request_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout android:id="@+id/preference_vehicle_category_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="@dimen/default_padding"
                      android:layout_marginBottom="@dimen/default_margin"
                      android:gravity="center">

            <TextView
                android:id="@+id/preference_vehicle_category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vehicle_category_label"
                android:textSize="@dimen/standard_label_text_size"/>

            <Spinner android:id="@+id/preference_vehicle_category_spinner"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textAlignment="viewEnd"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/preference_vehicle_sub_category_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="@dimen/default_padding"
                      android:layout_marginBottom="@dimen/default_margin"
                      android:gravity="center">

            <TextView
                android:id="@+id/preference_vehicle_sub_category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vehicle_sub_category_label"
                android:textSize="@dimen/standard_label_text_size"/>

            <Spinner android:id="@+id/preference_vehicle_sub_category_spinner"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textAlignment="viewEnd"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/preference_pickup_time_variation_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:padding="@dimen/default_padding"
                      android:layout_marginTop="@dimen/default_margin">

            <TextView android:id="@+id/preference_pickup_time_variation_label"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Pickup Time Variation"/>

            <SeekBar android:id="@+id/preference_pickup_time_variation_seekBar"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:min="10"
                     android:max="30"
                     android:padding="@dimen/default_padding"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/preference_pickup_distance_variation_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:padding="@dimen/default_padding">

            <TextView android:id="@+id/preference_pickup_distance_variation_label"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Pickup Distance Variation"/>

            <SeekBar android:id="@+id/preference_pickup_distance_variation_seekBar"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:min="10"
                     android:max="30"
                     android:padding="@dimen/default_padding"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/preference_drop_time_variation_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:padding="@dimen/default_padding">

            <TextView android:id="@+id/preference_drop_time_variation_label"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Pickup Distance Variation"/>

            <SeekBar android:id="@+id/preference_drop_time_variation_seekBar"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:min="10"
                     android:max="30"
                     android:padding="@dimen/default_padding"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:id="@+id/preference_ride_layout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <LinearLayout android:id="@+id/preference_vehicle_name_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="@dimen/default_padding"
                      android:gravity="center"
                      android:layout_marginBottom="@dimen/default_margin">

            <TextView
                android:id="@+id/preference_vehicle_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vehicle_number_label"
                android:textSize="@dimen/standard_label_text_size"/>

            <Spinner android:id="@+id/preference_vehicle_name_spinner"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textAlignment="viewEnd"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout android:id="@+id/preference_buttons_layout"
                  xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:padding="@dimen/default_padding"
                  android:gravity="bottom">

        <Button
            android:id="@+id/preference_cancel_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="@string/cancel_button_text"
            android:textAllCaps="false"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/preference_confirm_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="@string/confirm_button_text"
            android:textAllCaps="false"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>
